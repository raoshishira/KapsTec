---
// Define props from Astro
const { title, subTitle, partners } = Astro.props;

interface Partner {
  icon: any;
  name?: string;
  href?: string;
}

// Define TypeScript interface for props
interface Props {
  title: string;
  subTitle?: string;
  partners: Partner[];
}
---

<section
  class="mx-auto max-w-[85rem] px-4 py-20 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full dark:bg-slate-900"
>
  <!-- Title and description -->
  <div class="mx-auto mb-6 w-full space-y-1 text-center sm:w-1/2 lg:w-1/3">
    <h2
      class="text-2xl leading-tight font-bold text-balance text-neutral-800 sm:text-3xl dark:text-neutral-200"
    >
      {title}
    </h2>
    {
      subTitle && (
        <p class="leading-tight text-pretty text-neutral-600 dark:text-neutral-400">
          {subTitle}
        </p>
      )
    }
  </div>

  <!-- Infinite Scrolling Container -->
  <div class="relative overflow-hidden">
    <div class="scroll-container flex gap-8 py-4">
      <!-- First set of logos -->
      <div class="scroll-content flex items-center gap-8">
        {
          partners.map((partner) => (
            <a
              href={partner.href}
              target="_blank"
              rel="noopener noreferrer"
              class="flex-shrink-0 transform cursor-pointer rounded-xl bg-white/50 p-4 opacity-70 backdrop-blur-sm transition duration-300 hover:scale-105 hover:opacity-100 dark:bg-neutral-800/50 dark:opacity-80 dark:hover:opacity-100"
            >
              {typeof partner.icon === "string" &&
              partner.icon.startsWith("http") ? (
                <img
                  src={partner.icon}
                  alt={partner.name}
                  class="h-auto w-32 py-3 grayscale transition duration-500 ease-in-out hover:grayscale-0 lg:w-40 lg:py-5"
                />
              ) : typeof partner.icon === "string" ? (
                <div
                  set:html={partner.icon}
                  class="text-neutral-600 grayscale transition duration-500 ease-in-out hover:grayscale-0 dark:text-neutral-400"
                />
              ) : (
                <img
                  src={partner.icon.src}
                  alt={partner.name}
                  class="h-auto w-32 py-3 grayscale transition duration-500 ease-in-out hover:grayscale-0 lg:w-40 lg:py-5"
                />
              )}
            </a>
          ))
        }
      </div>
      <!-- Duplicate set for seamless loop -->
      <div class="scroll-content flex items-center gap-8" aria-hidden="true">
        {
          partners.map((partner) => (
            <a
              href={partner.href}
              target="_blank"
              rel="noopener noreferrer"
              class="flex-shrink-0 transform cursor-pointer rounded-xl bg-white/50 p-4 opacity-70 backdrop-blur-sm transition duration-300 hover:scale-105 hover:opacity-100 dark:bg-neutral-800/50 dark:opacity-80 dark:hover:opacity-100"
            >
              {typeof partner.icon === "string" &&
              partner.icon.startsWith("http") ? (
                <img
                  src={partner.icon}
                  alt={partner.name}
                  class="h-auto w-32 py-3 grayscale transition duration-500 ease-in-out hover:grayscale-0 lg:w-40 lg:py-5"
                />
              ) : typeof partner.icon === "string" ? (
                <div
                  set:html={partner.icon}
                  class="text-neutral-600 grayscale transition duration-500 ease-in-out hover:grayscale-0 dark:text-neutral-400"
                />
              ) : (
                <img
                  src={partner.icon.src}
                  alt={partner.name}
                  class="h-auto w-32 py-3 grayscale transition duration-500 ease-in-out hover:grayscale-0 lg:w-40 lg:py-5"
                />
              )}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .scroll-container {
    animation: scroll 40s linear infinite;
  }

  .scroll-container:hover {
    animation-play-state: paused;
  }
</style>
