---
// Define props from Astro
const { title, subTitle, benefits } = Astro.props;

// Define TypeScript interface for props
interface Props {
  title: string;
  subTitle?: string;
  benefits?: Array<string>;
}

// Define SVG marker to be used in the component
---

<div
  class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 dark:bg-slate-900"
>
  <div class="grid gap-12 lg:grid-cols-2 lg:items-center">
    <div>
      <h2
        class="text-3xl font-bold text-neutral-800 md:text-4xl md:leading-tight dark:text-neutral-200"
      >
        {title}
      </h2>
      <p class="mt-3 text-lg text-neutral-600 dark:text-neutral-400">
        {subTitle}
      </p>

      <div class="mt-8 space-y-4">
        {
          benefits &&
            benefits.map((benefit) => (
              <div class="flex gap-x-3">
                <div class="mt-1 flex-shrink-0">
                  <svg
                    class="h-5 w-5 text-orange-500"
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <polyline points="20 6 9 17 4 12" />
                  </svg>
                </div>
                <div class="grow">
                  <span class="font-medium text-neutral-800 dark:text-neutral-200">
                    {benefit}
                  </span>
                </div>
              </div>
            ))
        }
      </div>
    </div>
    <!-- End Col -->

    <div class="relative">
      <div class="grid grid-cols-2 gap-4 gap-y-8 py-10 lg:py-0">
        {
          [
            {
              title: "Precision",
              desc: "Manufactured to exact tolerances for leak-free performance.",
              icon: `<path d="M5.5 8.5 9 12l-3.5 3.5L2 12l3.5-3.5Z"></path><path d="m12 2 3.5 3.5L12 9 8.5 5.5 12 2Z"></path><path d="M18.5 8.5 22 12l-3.5 3.5L15 12l3.5-3.5Z"></path><path d="m12 15 3.5 3.5L12 22l-3.5-3.5 3.5-3.5Z"></path>`,
            },
            {
              title: "Durability",
              desc: "Materials selected to withstand extreme industrial environments.",
              icon: `<path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>`,
            },
            {
              title: "Efficiency",
              desc: "Designed to optimize your machinery's operational output.",
              icon: `<path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>`,
            },
            {
              title: "Reliability",
              desc: "Trusted by industry leaders for consistent quality.",
              icon: `<path d="M14 9V5a3 3 0 0 0-3-3l-4 9v11h11.28a2 2 0 0 0 2-1.7l1.38-9a2 2 0 0 0-2-2.3zM7 22H4a2 2 0 0 1-2-2v-7a2 2 0 0 1 2-2h3"></path>`,
            },
          ].map((item) => (
            <div class="relative flex flex-col rounded-2xl bg-white p-6 shadow-xl dark:border dark:border-neutral-700 dark:bg-neutral-900">
              <div class="mb-3 flex flex-wrap items-center gap-x-4 sm:flex-nowrap">
                <div class="inline-flex h-[62px] w-[62px] flex-shrink-0 items-center justify-center rounded-full border-4 border-orange-50 bg-orange-100 dark:border-orange-900 dark:bg-orange-800">
                  <svg
                    class="h-6 w-6 text-orange-600 dark:text-orange-400"
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    set:html={item.icon}
                  />
                </div>
                <div class="max-w-full flex-shrink-0">
                  <h3 class="block text-lg font-bold break-words text-gray-800 dark:text-white">
                    {item.title}
                  </h3>
                </div>
              </div>
              <p class="text-gray-600 dark:text-gray-400">{item.desc}</p>
            </div>
          ))
        }
      </div>
    </div>
    <!-- End Col -->
  </div>
</div>
