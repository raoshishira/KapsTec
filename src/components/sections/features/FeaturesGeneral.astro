---
// Import image
import { Image } from "astro:assets";
import aboutImage from "@images/construction-workers.avif"; // Using a generic professional image for now

// This component displays the "About Us" section with a split layout.
---

<div
  class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 dark:bg-slate-900"
>
  <div class="md:grid md:grid-cols-2 md:items-center md:gap-12 xl:gap-32">
    <div>
      <Image
        class="rounded-xl border border-neutral-200 shadow-lg dark:border-neutral-700"
        src={aboutImage}
        alt="KapsTec team at work"
      />
    </div>
    <!-- End Col -->

    <div class="mt-5 sm:mt-10 lg:mt-0">
      <div class="space-y-6 sm:space-y-8">
        <div class="space-y-2 md:space-y-4">
          <h2
            class="text-3xl font-bold text-neutral-800 lg:text-4xl dark:text-neutral-200"
          >
            Who We Are
          </h2>
          <p class="text-lg text-neutral-600 dark:text-neutral-400">
            We are <span class="font-bold text-orange-600 dark:text-orange-400"
              >KAPSTEC</span
            >, a professionally managed organization with our registered office
            in Mumbai and a branch office in Bangalore. Established in 2020, we
            serve as a trusted Representation House for reputed global companies
            in the Indian market.
          </p>
          <p class="text-lg text-neutral-600 dark:text-neutral-400">
            We also proudly manufacture Rubber Seals for the steel industry
            under the brand name <span
              class="font-semibold text-neutral-800 dark:text-neutral-200"
              >"AeroShield Seals"</span
            > based in Mumbai.
          </p>
        </div>

        <ul class="space-y-2 sm:space-y-4">
          <li class="flex space-x-3">
            <span
              class="mt-0.5 flex h-[2rem] w-[2rem] items-center justify-center rounded-full bg-orange-50 text-orange-600 dark:bg-orange-800/30 dark:text-orange-500"
            >
              <svg
                class="h-3.5 w-3.5 flex-shrink-0"
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </span>

            <span class="text-neutral-800 dark:text-neutral-200">
              Focus Sectors: <span class="font-bold"
                >Steel, Cement, and Power</span
              >
            </span>
          </li>

          <li class="flex space-x-3">
            <span
              class="mt-0.5 flex h-[2rem] w-[2rem] items-center justify-center rounded-full bg-orange-50 text-orange-600 dark:bg-orange-800/30 dark:text-orange-500"
            >
              <svg
                class="h-3.5 w-3.5 flex-shrink-0"
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </span>

            <span class="text-neutral-800 dark:text-neutral-200">
              <span class="font-bold">20+ Years</span> of Experience
            </span>
          </li>

          <li class="flex space-x-3">
            <span
              class="mt-0.5 flex h-[2rem] w-[2rem] items-center justify-center rounded-full bg-orange-50 text-orange-600 dark:bg-orange-800/30 dark:text-orange-500"
            >
              <svg
                class="h-3.5 w-3.5 flex-shrink-0"
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </span>

            <span class="text-neutral-800 dark:text-neutral-200">
              Committed to <span class="font-bold">Quality & Excellence</span>
            </span>
          </li>
        </ul>
      </div>
    </div>
    <!-- End Col -->
  </div>
</div>
