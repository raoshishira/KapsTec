---
import { Image } from "astro:assets";

// Import images for the products
import productImage1 from "@images/product-image-1.avif";
import millRolls from "@/images/products/mill-rolls-adamite.webp";
import gearCoupling from "@/images/products/gear-coupling-main.webp";
import productImage4 from "@images/product-image-4.avif";
import productImageMain1 from "@images/product-image-main-1.avif";

const products = [
  {
    name: "Rubber Seals",
    description:
      "High-quality rubber seals for various industrial applications, ensuring durability and performance.",
    image: productImage1,
    url: "/products/rubber-seals",
  },
  {
    name: "Rolls",
    description:
      "Precision-engineered rolls for manufacturing and processing machinery, built for reliability and long life.",
    image: millRolls,
    url: "/products/rolls",
  },
  {
    name: "Gear coupling",
    description:
      "Robust gear couplings for power transmission, designed to handle high torque and misalignment.",
    image: gearCoupling,
    url: "/products/gear-coupling",
  },
  {
    name: "Quick release couplings (QRC)",
    description:
      "Efficient quick release couplings (QRC) for fast and secure connections in fluid and pneumatic systems.",
    image: productImage4,
    url: "/products/quick-release-couplings-qrc",
  },
  {
    name: "Oil filling and filtering Units",
    description:
      "Advanced units for filling and filtering oil, ensuring clean lubricants for optimal machinery performance.",
    image: productImageMain1,
    url: "/products/oil-filling-and-filtering-units",
  },
];
---

<div class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
  <!-- Title -->
  <div class="mx-auto mb-10 max-w-2xl text-center lg:mb-14">
    <h2
      class="text-3xl font-bold text-neutral-800 md:text-4xl md:leading-tight dark:text-neutral-200"
    >
      Our Products
    </h2>
    <p class="mt-1 text-neutral-600 dark:text-neutral-400">
      High-performance sealing solutions for every industrial need.
    </p>
  </div>
  <!-- End Title -->

  <!-- Grid -->
  <!-- Grid -->
  <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
    {
      products.map((product) => (
        <a
          href={product.url}
          class="group flex h-full flex-col rounded-xl border border-neutral-200 bg-white shadow-sm transition-all duration-300 hover:-translate-y-1 hover:shadow-xl dark:border-neutral-700 dark:bg-neutral-800"
        >
          <div class="relative h-60 overflow-hidden rounded-t-xl transition-all duration-500 group-hover:brightness-105">
            <Image
              src={product.image}
              alt={`Image of ${product.name}`}
              class="h-full w-full object-cover object-center transition-transform duration-500 ease-in-out group-hover:scale-110"
            />
          </div>
          <div class="flex flex-grow flex-col p-5 md:p-6">
            <h3 class="text-xl font-bold text-neutral-800 transition-colors group-hover:text-orange-600 dark:text-neutral-200">
              {product.name}
            </h3>
            <p class="mt-3 flex-grow leading-relaxed text-neutral-600 dark:text-neutral-400">
              {product.description}
            </p>
            <div class="mt-5 inline-flex items-center gap-x-1.5 text-sm font-semibold text-orange-500 decoration-2 group-hover:text-orange-600 group-hover:underline">
              Learn more
              <svg
                class="h-4 w-4 flex-shrink-0 transition ease-in-out group-hover:translate-x-1"
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="m9 18 6-6-6-6" />
              </svg>
            </div>
          </div>
        </a>
      ))
    }
  </div>
  <!-- End Grid -->
</div>
