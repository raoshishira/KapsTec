---
import { Image } from "astro:assets";

// Import images for the products
import productImage1 from "@images/product-image-1.avif";
import productImage2 from "@images/product-image-2.avif";
import productImage3 from "@images/product-image-3.avif";
import productImage4 from "@images/product-image-4.avif";
import productImageMain1 from "@images/product-image-main-1.avif";

const products = [
  {
    name: "Rubber Seals",
    description: "High-quality rubber seals for various industrial applications, ensuring durability and performance.",
    image: productImage1,
    url: "/products/rubber-seals",
  },
  {
    name: "Rolls",
    description: "Precision-engineered rolls for manufacturing and processing machinery, built for reliability and long life.",
    image: productImage2,
    url: "/products/rolls",
  },
  {
    name: "Gear coupling",
    description: "Robust gear couplings for power transmission, designed to handle high torque and misalignment.",
    image: productImage3,
    url: "/products/gear-coupling",
  },
  {
    name: "Quick release couplings (QRC)",
    description: "Efficient quick release couplings (QRC) for fast and secure connections in fluid and pneumatic systems.",
    image: productImage4,
    url: "/products/quick-release-couplings-qrc",
  },
  {
    name: "Oil filling and filtering Units",
    description: "Advanced units for filling and filtering oil, ensuring clean lubricants for optimal machinery performance.",
    image: productImageMain1,
    url: "/products/oil-filling-and-filtering-units",
  },
];
---

<div class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
    <!-- Title -->
    <div class="mx-auto mb-10 max-w-2xl text-center lg:mb-14">
      <h2 class="text-3xl font-bold text-neutral-800 dark:text-neutral-200 md:text-4xl md:leading-tight">
        Our Products
      </h2>
      <p class="mt-1 text-neutral-600 dark:text-neutral-400">
        High-performance sealing solutions for every industrial need.
      </p>
    </div>
    <!-- End Title -->

    <!-- Grid -->
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      {products.map((product) => (
        <a href={product.url} class="group flex flex-col rounded-xl border border-neutral-200 bg-white shadow-sm transition hover:shadow-md dark:border-neutral-700 dark:bg-neutral-800">
          <div class="relative h-52 overflow-hidden rounded-t-xl">
            <Image
              src={product.image}
              alt={`Image of ${product.name}`}
              class="h-full w-full object-cover transition-transform duration-500 ease-in-out group-hover:scale-105"
            />
          </div>
          <div class="p-4 md:p-6">
            <h3 class="text-xl font-semibold text-neutral-800 dark:text-neutral-200">
              {product.name}
            </h3>
            <p class="mt-3 text-neutral-600 dark:text-neutral-400">
              {product.description}
            </p>
          </div>
        </a>
      ))}
    </div>
    <!-- End Grid -->
  </div>
