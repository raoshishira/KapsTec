---
import { Image } from "astro:assets";
import Icon from "../../ui/icons/Icon.astro";

const { content, author, role, avatarSrc } = Astro.props;

interface Props {
  content: string;
  author: string;
  role: string;
  avatarSrc: string;
}
---

<blockquote class="relative rounded-xl border border-neutral-300 dark:border-neutral-700 bg-white/80 dark:bg-neutral-900/80 backdrop-blur-sm p-6 shadow-sm m-3">
  <Icon name="quotation" class="absolute top-4 left-4 text-neutral-300 dark:text-neutral-700 w-6 h-6" />

  <div class="relative z-10">
    <p class="text-lg italic text-neutral-800 dark:text-neutral-200">
      {content}
    </p>
  </div>

  <div class="mt-6 flex items-center">
    <div class="shrink-0">
      <Image
        class="h-10 w-10 rounded-full object-cover border border-neutral-300 dark:border-neutral-700"
        src={avatarSrc}
        alt={`${author}'s avatar`}
        loading={"eager"}
        inferSize
      />
    </div>
    <div class="ms-4 grow">
      <div class="font-semibold text-neutral-800 dark:text-neutral-200">
        {author}
      </div>
      <div class="text-xs text-neutral-500 dark:text-neutral-400">
        {role}
      </div>
    </div>
  </div>
</blockquote>
