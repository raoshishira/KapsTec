---
// Extract the properties from Astro.props
const { title, subTitle } = Astro.props;
// Define TypeScript interface for the properties
interface Props {
  title: string;
  subTitle: string;
}
---

<!-- Container for the title and subtitle -->
<div
  class="rounded-2xl border border-neutral-100 bg-white p-8 shadow-lg lg:pe-6 xl:pe-12 dark:border-neutral-700 dark:bg-neutral-800/50"
>
  <p
    class="text-6xl leading-10 font-extrabold tracking-tight text-orange-500 dark:text-orange-400"
  >
    {title}
  </p>
  <p class="mt-4 text-lg text-neutral-600 dark:text-neutral-400">{subTitle}</p>
</div>
