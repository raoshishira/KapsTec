---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import ProductSection from "@components/sections/products/ProductSection.astro";
import FeaturesStatsAlt from "@components/sections/features/FeaturesStatsAlt.astro";

import features from "@data/features.json";
import { partnersData } from "@/data_files/constants";


---

<MainLayout>
  
  <HeroSection
    title="Precision-Engineered Seals Built for Extreme Performance"
    subTitle="Trust KAPSTEC for Leak-Free Solutions in Pharma, Automotive & Industrial Applications"
    primaryBtn="Learn More"
    primaryBtnURL="/products"
    secondaryBtn="Contact US"
    secondaryBtnURL="/contact"
  />

  <FeaturesGeneral
    title="Unmatched Quality and Expertise"
    subTitle="Delivering precision, reliability, and innovation in every product we make."
    features={features}
  />

  <ProductSection />

  <FeaturesStatsAlt
    title="Industries We Serve"
    subTitle="From automotive assembly lines to sterile pharmaceutical environments, KapsTec provides reliable sealing solutions that enhance performance and ensure safety across a wide range of critical industries."
    benefits={[
      "Automotive & Aerospace",
      "Pharmaceutical & Medical",
      "Food & Beverage Processing",
      "Industrial Manufacturing",
      "Oil & Gas Exploration",
      "Power Generation",
    ]}
  />

  <ClientsSection
    title="Our Valued Clients"
    subTitle="Trusted Partners Across Key Industries"
    partners={partnersData}
  />

  <HeroSectionAlt
    title="Ready to Strengthen Your Operations?"
    subTitle="Partner with KapsTek for precision sealing solutions built to perform in the toughest industrial environments."
  />

</MainLayout>