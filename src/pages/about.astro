---
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSectionAlt from "@components/sections/testimonials/TestimonialsSectionAlt.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import aboutData from "@data/about-us-data.json";

// Import images
import innovativeSolutions from "@/images/innovative-solutions.avif";
import precisionEngineering from "@/images/precision-engineering.avif";
import builtToLast from "@/images/built-to-last.avif";

interface Stat {
  stat: string;
  description: string;
}

interface FeaturesStatsProps {
  title: string;
  subTitle?: string;
  mainStatTitle: string;
  mainStatSubTitle: string;
  stats?: Stat[];
}

const { featureStats, testimonialsAlt, faq } = aboutData;

// Create a new featuresNavs object with imported images
const featuresNavs = {
  title: aboutData.featuresNavs.title,
  products: [
    {
      title: "Innovation",
      image: innovativeSolutions,
      alt: "Innovative Solutions",
      url: "#"
    },
    {
      title: "Quality",
      image: precisionEngineering,
      alt: "Precision Engineering",
      url: "#"
    },
    {
      title: "Integrity",
      image: builtToLast,
      alt: "Built to Last",
      url: "#"
    }
  ]
};
---

<MainLayout title="About Us | KapsTec">
  <HeroSectionAlt
    title="Pioneering Industrial Excellence, One Component at a Time"
    subTitle="At KapsTec, we are dedicated to engineering and delivering high-quality industrial components that our clients can trust. Our journey is one of passion, precision, and an unwavering commitment to excellence."
  />

  <FeaturesStats
    {...(featureStats as FeaturesStatsProps)}
  />

  <FeaturesNavs
    title={featuresNavs.title}
    products={featuresNavs.products}
  />

  <TestimonialsSectionAlt
    title={testimonialsAlt.title}
    testimonials={testimonialsAlt.testimonials}
  />

  <FAQ title={faq.title} faqs={faq.faqs} />

</MainLayout>
