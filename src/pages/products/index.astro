---
import MainLayout from "@/layouts/MainLayout.astro";
import { Image } from "astro:assets";
import FeaturesStatsAlt from "@/components/sections/features/FeaturesStatsAlt.astro";
import { SITE } from "@data/constants";

// Import images for the products
import rollsImage from "@images/rolls.webp";
import rubberSealsImage from "@images/rubber_seals.webp";
import gearCouplingImage from "@images/products/gear-coupling-main.webp";
import qrcImage from "@images/qrc.jpg";
import oilFillingImage from "@images/oil_filling.jpg";

const products = [
  {
    name: "Rubber Seals",
    description:
      "High-quality rubber seals for various industrial applications, ensuring durability and performance.",
    image: rubberSealsImage,
    url: "/products/rubber-seals",
  },
  {
    name: "Rolls",
    description:
      "Precision-engineered rolls for manufacturing and processing machinery, built for reliability and long life.",
    image: rollsImage,
    url: "/products/rolls",
  },
  {
    name: "Gear Coupling",
    description:
      "Robust gear couplings for power transmission, designed to handle high torque and misalignment.",
    image: gearCouplingImage,
    url: "/products/gear-coupling",
  },
  {
    name: "Quick Release Couplings (QRC)",
    description:
      "Efficient quick release couplings (QRC) for fast and secure connections in fluid and pneumatic systems.",
    image: qrcImage,
    url: "/products/quick-release-couplings-qrc",
  },
  {
    name: "Oil Filling and Filtering Units",
    description:
      "Advanced units for filling and filtering oil, ensuring clean lubricants for optimal machinery performance.",
    image: oilFillingImage,
    url: "/products/oil-filling-and-filtering-units",
  },
];

const pageTitle: string = `Our Products | ${SITE.title}`;
const metaDescription =
  "Explore the durability and precision of KapsTec seals, designed for professionals and enthusiasts.";
const ogTitle = `Our Products | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
>
  <div class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
    <!-- Title -->
    <div class="mx-auto mb-10 max-w-2xl text-center lg:mb-14">
      <h1
        class="text-3xl font-bold text-neutral-800 md:text-4xl md:leading-tight dark:text-neutral-200"
      >
        Our Products
      </h1>
      <p class="mt-1 text-neutral-600 dark:text-neutral-400">
        High-performance sealing solutions for every industrial need.
      </p>
    </div>
    <!-- End Title -->

    <!-- Grid -->
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        products.map((product) => (
          <a
            href={product.url}
            class="group flex flex-col rounded-xl border border-neutral-200 bg-white shadow-sm transition hover:shadow-md dark:border-neutral-700 dark:bg-neutral-800"
          >
            <div class="relative h-52 overflow-hidden rounded-t-xl">
              <Image
                src={product.image}
                alt={`Image of ${product.name}`}
                class="h-full w-full object-cover transition-transform duration-500 ease-in-out group-hover:scale-105"
              />
            </div>
            <div class="p-4 md:p-6">
              <h3 class="text-xl font-semibold text-neutral-800 dark:text-neutral-200">
                {product.name}
              </h3>
              <p class="mt-3 text-neutral-600 dark:text-neutral-400">
                {product.description}
              </p>
            </div>
          </a>
        ))
      }
    </div>
    <!-- End Grid -->
  </div>

  <!-- Industries Section -->
  <FeaturesStatsAlt
    title="Industries We Serve"
    subTitle="From automotive assembly lines to sterile pharmaceutical environments, KapsTec provides reliable sealing solutions that enhance performance and ensure safety across a wide range of critical industries."
    benefits={[
      "Automotive & Aerospace",
      "Pharmaceutical & Medical",
      "Food & Beverage Processing",
      "Industrial Manufacturing",
      "Oil & Gas Exploration",
      "Power Generation",
    ]}
  />
</MainLayout>
