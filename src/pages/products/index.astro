---
import MainLayout from "@/layouts/MainLayout.astro";
import { Image } from "astro:assets";
import FeaturesStatsAlt from "@/components/sections/features/FeaturesStatsAlt.astro";
import { SITE } from "@data/constants";

// Import images for the products
import productImage1 from "@images/product-image-1.avif";
import productImage2 from "@images/product-image-2.avif";
import productImage3 from "@images/product-image-3.avif";
import productImage4 from "@images/product-image-4.avif";
import productImageMain1 from "@images/product-image-main-1.avif";
import productImageMain2 from "@images/product-image-main-2.avif";

const products = [
  {
    name: "Oil Seal",
    description: "Designed to prevent lubricant leakage from shafts and bearings, while also protecting machinery from external contaminants. Essential for ensuring the longevity and reliability of rotating equipment.",
    image: productImage1,
    url: "/products/oil-seals",
  },
  {
    name: "Static Seal",
    description: "Provides a reliable seal between two non-moving parts, such as flanges or housings. Our static seals, including high-quality gaskets, ensure leak-free performance even under extreme pressure and temperature.",
    image: productImage2,
    url: "/products/static-seals",
  },
  {
    name: "Rubber Diaphragm",
    description: "A flexible, versatile seal that separates two chambers, preventing fluid or gas transfer. Commonly used in pumps, valves, and actuators for precise control and long-lasting durability.",
    image: productImage3,
    url: "/products/rubber-diaphragm",
  },
  {
    name: "Valve Seal",
    description: "Crucial for engine performance, our valve seals prevent oil from leaking into the combustion chamber through the valve guides, reducing emissions and oil consumption while maintaining optimal efficiency.",
    image: productImage4,
    url: "/products/valve-seals",
  },
  {
    name: "TC Sanitary Gaskets",
    description: "Tri-Clamp sanitary gaskets are designed for hygienic piping systems in the pharmaceutical, food, and beverage industries. They provide a smooth, non-toxic, and leak-proof seal for critical processes.",
    image: productImageMain1,
    url: "/products/tc-sanitary-gaskets",
  },
  {
    name: "FBC Gaskets",
    description: "Specifically engineered for Fluid-Bed Coater (FBC) machinery in the pharmaceutical industry. These gaskets provide a secure seal during granulation and coating processes, ensuring product integrity and safety.",
    image: productImageMain2,
    url: "/products/fbc-gaskets",
  },
];

const pageTitle: string = `Our Products | ${SITE.title}`;
const metaDescription = "Explore the durability and precision of KapsTec seals, designed for professionals and enthusiasts.";
const ogTitle = `Our Products | ${SITE.title}`;
---
<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
>
  <div class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
    <!-- Title -->
    <div class="mx-auto mb-10 max-w-2xl text-center lg:mb-14">
      <h1 class="text-3xl font-bold text-neutral-800 dark:text-neutral-200 md:text-4xl md:leading-tight">
        Our Products
      </h1>
      <p class="mt-1 text-neutral-600 dark:text-neutral-400">
        High-performance sealing solutions for every industrial need.
      </p>
    </div>
    <!-- End Title -->

    <!-- Grid -->
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      {products.map((product) => (
        <a href={product.url} class="group flex flex-col rounded-xl border border-neutral-200 bg-white shadow-sm transition hover:shadow-md dark:border-neutral-700 dark:bg-neutral-800">
          <div class="relative h-52 overflow-hidden rounded-t-xl">
            <Image
              src={product.image}
              alt={`Image of ${product.name}`}
              class="h-full w-full object-cover transition-transform duration-500 ease-in-out group-hover:scale-105"
            />
          </div>
          <div class="p-4 md:p-6">
            <h3 class="text-xl font-semibold text-neutral-800 dark:text-neutral-200">
              {product.name}
            </h3>
            <p class="mt-3 text-neutral-600 dark:text-neutral-400">
              {product.description}
            </p>
          </div>
        </a>
      ))}
    </div>
    <!-- End Grid -->
  </div>

  <!-- Industries Section -->
  <FeaturesStatsAlt
    title="Industries We Serve"
    subTitle="From automotive assembly lines to sterile pharmaceutical environments, KapsTec provides reliable sealing solutions that enhance performance and ensure safety across a wide range of critical industries."
    benefits={[
      "Automotive & Aerospace",
      "Pharmaceutical & Medical",
      "Food & Beverage Processing",
      "Industrial Manufacturing",
      "Oil & Gas Exploration",
      "Power Generation",
    ]}
  />
</MainLayout>