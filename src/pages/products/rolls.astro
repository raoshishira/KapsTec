    imgCard: rolls,
    imgMain: rolls,
    imgAlt: "A large, precision-engineered industrial steel roll."
  },
  product_sections: [
    {
      title: "Rolls for Long Product Mills",
      features: [
        "HSS Rolls for Bar Mills",
        "Alloy Cast Steel Rolls",
        "Adamite Rolls",
        "Graphitic Steel Rolls",
        "Pearlitic Nodular Cast Iron Rolls",
        "Bainitic Nodular Cast Iron Rolls",
        "Alloy Indefinite Chilled Cast Iron Rolls",
        "Cast Rolls with Grooves"
      ],
      images: [
        { src: productImage1, alt: "Rolls for Long Product Mills Image 1" },
        { src: productImage2, alt: "Rolls for Long Product Mills Image 2" }
      ]
    },
    {
      title: "Rolls for Hot Strip & Plate Mills",
      features: [
        "High Chrome Steel Rolls",
        "EN-HiCr Iron Rolls",
        "Enhanced ICDP Rolls",
        "HSS Rolls",
        "Cast Back-up Rolls"
      ],
      images: [
        { src: productImage3, alt: "Rolls for Hot Strip & Plate Mills Image 1" },
        { src: productImage4, alt: "Rolls for Hot Strip & Plate Mills Image 2" }
      ]
    },
    {
      title: "Rolls for Cold Rolling Mills",
      features: [
        "Work Rolls",
        "Back-up Rolls"
      ],
      images: [
        { src: productImageMain1, alt: "Rolls for Cold Rolling Mills Image 1" },
        { src: productImageMain2, alt: "Rolls for Cold Rolling Mills Image 2" }
      ]
    }
